// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Token {
  id                    String   @id @default(cuid())
  tokenAddress          String   @unique
  name                  String
  ticker                String
  description           String?
  imageUrl              String?
  website               String?
  telegram              String?
  twitter               String?
  discord               String?
  creatorWallet         String
  initialOwnerWallet    String
  rewardTokenAddress    String?
  rewardDistributionPercent Int @default(0)
  burnPercent           Int @default(0)
  burnToken             String?
  platformFeePercent    Float    @default(2.0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  allocations           Allocation[]
  ownershipTransfers    OwnershipTransfer[]
  
  @@index([creatorWallet])
  @@index([tokenAddress])
}

model Allocation {
  id            String   @id @default(cuid())
  tokenId       String
  token         Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  walletAddress String
  percentage    Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([tokenId, walletAddress])
  @@index([tokenId])
  @@index([walletAddress])
}

model OwnershipTransfer {
  id            String   @id @default(cuid())
  tokenId       String
  token         Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  fromWallet    String
  toWallet      String
  transferredAt DateTime @default(now())
  
  @@index([tokenId])
  @@index([fromWallet])
  @@index([toWallet])
}

model Profile {
  id            String   @id @default(cuid())
  walletAddress String   @unique
  username      String?
  bio           String?
  avatarUrl     String?
  bannerUrl     String?
  website       String?
  twitter       String?
  telegram      String?
  discord       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([walletAddress])
}
